                android:layout_marginRight="2dp"
                android:background="#800000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:text="@string/question10"
                android:textColor="#ff8000"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/angler_dugong" />
            <CheckBox
                android:id="@+id/ques10_checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxQues10Clicked"
                android:text="@string/angler_fish"
                android:textColor="#664400"
                android:textSize="17sp" />
            <CheckBox
                android:id="@+id/ques10_checkbox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxQues10Clicked"
                android:text="@string/saw_fish"
                android:textColor="#664400"
                android:textSize="17sp" />
            <CheckBox
                android:id="@+id/ques10_checkbox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxQues10Clicked"
                android:text="@string/giant_seal"
                android:textColor="#664400"
                android:textSize="17sp" />
            <CheckBox
                android:id="@+id/ques10_checkbox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxQues10Clicked"
                android:text="@string/dugong"
                android:textColor="#664400"
                android:textSize="17sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="#800000" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_before_buttons"
            android:textColor="#ff8000" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffe0cc">
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:onClick="submitButton"
                android:text="@string/grade_me"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit_button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:onClick="resetButton"
                android:text="@string/reset"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
